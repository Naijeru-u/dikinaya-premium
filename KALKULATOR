def calculator(a, b, operation):
    if operation == '+':
        return a + b
    elif operation == '-':
        return a - b
    elif operation == '*':
        return a * b
    elif operation == '/':
        if b != 0:
            return a / b
        else:
            return "Error: Division by zero"
    else:
        return "Invalid operation"

# Example usage:
x = float(input("Enter first value: "))
y = float(input("Enter second value: "))
op = input("Enter operation (+, -, *, /): ")
result = calculator(x, y, op)
print("Result:", result)